generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Url {
  id        Int       @id @default(autoincrement())
  hash      String    @unique
  url       String
  createdAt DateTime? @default(now())
  updatedAt DateTime?
  deletedAt DateTime?
  Stats     Stats[]
}

model Stats {
  id        Int       @id @default(autoincrement())
  ipHash    String
  urlId     Int
  createdAt DateTime? @default(now())
  updatedAt DateTime?
  deletedAt DateTime?
  Url       Url      @relation(fields: [urlId], references: [id])

  @@index([urlId], name: "urlId")
}
